#!/bin/bash

# Get the current directory name (basename)
current_dir=$(basename "$(pwd)")

# Check if argument is provided
if [ $# -eq 0 ]; then
    echo "Usage: xgcm <commit_message>"
    echo "Example: xgcm \"init\" -> commits with message \"dir01 - init\""
    exit 1
fi

# Generate the formatted commit message with directory prefix
commit_message="$current_dir - $1"

# Create git commit with the formatted message
git commit -m "$commit_message"
